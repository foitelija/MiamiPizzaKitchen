<CascadingAuthenticationState>

    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(PizzaLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(PizzaLayout)">
                <p role="alert">Sorry, there's nothing at this address. (Client/App.razor)</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
